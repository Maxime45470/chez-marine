{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('assets/css/login.css') }}">
	<link rel="stylesheet" href="{{ asset('assets/css/navbar.css') }}">
{% endblock %}

{% block body %}
	<div class="container text-center">
		<div class="connexion">
			<form method="post">
				<div class="col-12">
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}
					{# Message pour dire que l'on est déja connecter #}
					{% if app.user %}
						<div class="mb-3">
							Vous ètes déja connecter :	{{ app.user.userIdentifier }},<a href="{{ path('app_logout') }}">Déconnexion</a>
						</div>
					{% endif %}
				</div>
			</div>
			<div class="connexion">
				<div class="row justify-content-center">
					<div class="col-sm-12 col-md-10 col-lg-6 ">
                    	<img src="assets/img/ballon.png" alt="ballon" class="ballon">
						<h1 class="text-center bienvenue">Connexion</h1>
						<label for="inputEmail">Email</label>
						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
						<label for="inputPassword"></label>
                    	<img src="assets/img/ours.png" alt="ours" class="logo">
						<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="Password">
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
						<button class="btn bouton" type="submit">
							Se connecter
						</button>
					</div>
				</div>
			</form>
		</div>
	</div>
{% endblock %}
