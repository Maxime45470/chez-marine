{% extends 'base.html.twig' %}

{% block title %}Edit Info
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('assets/css/info.css') }}">
{% endblock %}

{% block body %}
	{% if is_granted('ROLE_ADMIN') %}
		<div class="container">
			<h1 class="text-center">Modifier Info</h1>
			<div class="row d-flex justify-content-center">
				<div class="col-md-6 col-sm-6 col-lg-4 col-xl-4 m-2 p-3 cadre-info">
					{{ include('info/_form.html.twig', {'button_label': 'Update'}) }}
				</div>
            </div>
				<a class="btn btn-info" href="{{ path('app_info_index') }}">Retour</a>
			</div>
			<div class="text-center">
				{{ include('info/_delete_form.html.twig') }}
			</div>
		</div>
	</div>
{% else %}
	<div class="container text-center justify-content-around">
		<div class="row">
			<div class="col-12">
				<h1>Vous devez être administrateur pour accéder à cette page
					<a href="{{ path('app_login') }}">Se connecter</a>
				</h1>
			</div>
		</div>
	</div>
{% endif %}{% endblock %}
