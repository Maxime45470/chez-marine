{% extends 'base.html.twig' %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('assets/css/photoGroupe.css') }}">
{% endblock %}

{% block title %}Ajout Photo Groupe
{% endblock %}


{% block body %}

{% if is_granted('ROLE_ADMIN') %}
	<div class="container d-flex justify-content-center">
		<div class="row d-flex justify-content-center">
			<h1 class="text-center">Ajout photo de groupe</h1>
			<div class="col-sm-12 col-md-12 col-lg-12 cadre-ajout">
				<div class="d-flex justify-content-center">

					{{form_start(photoGroupe)}}
					<div class="text-center m-3">
						{{form_row(photoGroupe.titre)}}
					</div>
					<div class="text-center m-3">
						{{form_row(photoGroupe.description)}}
					</div>
					<div class="text-center m-3">
						{{form_row(photoGroupe.photo)}}
					</div>
					<div class="text-center m-3">
						{{form_row(photoGroupe.categories)}}
					</div>
					<div class="text-center m-3">
						{{form_row(photoGroupe.parent)}}
					</div>
					<div class="text-center m-3">
						{{form_row(photoGroupe.created_at)}}
					</div>
					<div class=" d-flex justify-content-center">
						<button disabled="disabled" type="submit" class="btn btn-outline-primary">enregistrer</button>
					</div>


					{{form_end(photoGroupe)}}
				</div>
			</div>
		</div>
	</div>

{% else %}
	<div class="container text-center justify-content-around">
		<div class="row">
			<div class="col-12">
				<h1>Vous devez être connecté comme administrateur pour accéder à cette page</h1>
				<a href="{{ path('app_login') }}">Se connecter</a>
			</h1>
		</div>
	</div>
</div>{% endif %}{% endblock %}
